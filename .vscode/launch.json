    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/modules",
        },
        {
            "name": "Training Pipeline",
            "type": "python",
            "request": "launch",
            "module": "tools.train_run",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/modules/training_pipeline",
            "args": [
                "--config_file",
                "configs/training_config.yaml",
                "--output_dir",
                "./output",
                "--dataset_dir",
                "./dataset"
            ]
        },
        {
            "name": "Training Pipeline [Dev]",
            "type": "python",
            "request": "launch",
            "module": "tools.train_run",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/modules/training_pipeline",
            "args": [
                "--config_file",
                "configs/dev_training_config.yaml",
                "--output_dir",
                "./output",
                "--dataset_dir",
                "./dataset"
            ]
        },
        {
            "name": "Training Pipeline [Inference]",
            "type": "python",
            "request": "launch",
            "module": "tools.inference_run",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/modules/training_pipeline",
            "args": [
                "--config_file",
                "configs/inference_config.yaml",
                "--dataset_dir",
                "./dataset"
            ]
        },
        {
            "name": "Training Pipeline [Inference Dev]",
            "type": "python",
            "request": "launch",
            "module": "tools.inference_run",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/modules/training_pipeline",
            "args": [
                "--config_file",
                "configs/dev_inference_config.yaml",
                "--dataset_dir",
                "./dataset"
            ]
        },
        {
            "name": "Streaming Pipeline [Real-Time]",
            "type": "python",
            "request": "launch",
            "module": "bytewax.run",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/modules/streaming_pipeline",
            "args": [
                "tools.run_real_time:build_flow"
            ]
        },
        {
            "name": "Streaming Pipeline [Real-Time Dev]",
            "type": "python",
            "request": "launch",
            "module": "bytewax.run",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/modules/streaming_pipeline",
            "args": [
                "tools.run_real_time:build_flow(debug=True)"
            ]
        },
        {
            "name": "Streaming Pipeline [Batch]",
            "type": "python",
            "request": "launch",
            "module": "bytewax.run",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/modules/streaming_pipeline",
            "args": [
                "-p4",
                "tools.run_batch:build_flow(latest_n_days=12)"
            ]
        },
        {
            "name": "Streaming Pipeline [Batch Dev]",
            "type": "python",
            "request": "launch",
            "module": "bytewax.run",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/modules/streaming_pipeline",
            "args": [
                "tools.run_batch:build_flow(latest_n_days=2, debug=True)"
            ]
        },
    ]
}